#!/bin/bash
#SBATCH --nodes=4
#SBATCH --ntasks=96
#SBATCH --time=05:00:00
#SBATCH --cpus-per-task=1
#SBATCH -C miriel
#SBATCH --output=log_out
#SBATCH --error=log_err

# Load dependencies
module load compiler/gcc/9.3.0
module load mpi/openmpi/3.1.4-all

# compile
make clean
mpic++ -O3 main.cpp DataFile.cpp Drop.cpp Function.cpp Spray.cpp -lm -o run

# run
mpirun ./run ../data/data.toml
